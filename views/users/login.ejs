<% layout('layouts/boilerplate') -%>

<div class="container justify-content-center align-items-center mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6  col-xl-5  col-sm-8">
      <div class="card shadow">
        <img src="https://res.cloudinary.com/dfqsfweeu/image/upload/v1663044292/YelpCamp/hpiijz4ok6fqrykfkacm.jpg" alt="" class="card-img-top">
        <div class="card-body">
          <h5 class="card-title">Login</h5>
          <form action="/login" method="POST" class="validated-form" novalidate>
            <div class="mb-3">
              <label class="form-label" for="username">Username</label>
              <input
                class="form-control"
                type="text"
                id="username"
                name="username"
                autofocus
                required
              />
              <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
              <label class="form-label" for="password">Pasword</label>
              <input
                class="form-control"
                type="password"
                id="password"
                name="password"
                required
              />
              <div class="valid-feedback">Looks good!</div>
            </div>
            <button class="btn btn-success btn-block">Login</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
